{
    "compilerOptions": {
      /* 基础配置 */
      "target": "ESNext",
      "lib": [
        "dom",
        "ESNext"
      ],
      "removeComments": false,
      "declaration": true,
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
      /* 强类型检查配置 */
      "strict": true,
      "noImplicitAny": false,
  
      /* 模块分析配置 */
      "baseUrl": ".",
      "outDir": "./lib",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true
    },
    "include": [
      "src"
    ]
  }
  